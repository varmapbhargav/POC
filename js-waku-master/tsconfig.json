{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha"]
  },
  "exclude": ["**/node_modules", "**/dist"]
}
